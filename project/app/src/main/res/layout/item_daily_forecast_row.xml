<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/ivDailyWeatherIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@+id/tvDay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvPrecipChance"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvPrecipChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5AC8FA"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/ivDailyWeatherIcon"
        app:layout_constraintEnd_toEndOf="@+id/ivDailyWeatherIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivDailyWeatherIcon"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvDailyL"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textColor="#99FFFFFF"
        android:textSize="17sp"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@+id/ivDailyWeatherIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp" />

    <FrameLayout
        android:id="@+id/tempBarContainer"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/temp_range_bar_background"
        app:layout_constraintStart_toEndOf="@+id/tvDailyL"
        app:layout_constraintEnd_toStartOf="@+id/tvDailyH"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/tempBarFill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/temp_range_bar_fill" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvDailyH"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
