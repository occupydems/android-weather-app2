<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/swipeDataEnd"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@+id/nsvWeatherDetails"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp"
            motion:onTouchUp="stop" />
        <KeyFrameSet >
            <!-- tvCity scale animation for smooth shrinking -->
            <KeyAttribute
                motion:motionTarget="@+id/tvCity"
                motion:framePosition="0"
                android:scaleX="1.0"
                android:scaleY="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/tvCity"
                motion:framePosition="100"
                android:scaleX="0.75"
                android:scaleY="0.75" />
            
            <!-- tvTemp: gradual fade-out starting at frame 5 -->
            <KeyAttribute
                motion:motionTarget="@+id/tvTemp"
                motion:framePosition="5"
                android:alpha="0.9" />
            <KeyAttribute
                motion:motionTarget="@+id/tvTemp"
                motion:framePosition="25"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tvTemp"
                motion:framePosition="100"
                android:alpha="0" />
            
            <!-- tvWeatherDescription: gradual fade-out starting at frame 5 -->
            <KeyAttribute
                motion:motionTarget="@+id/tvWeatherDescription"
                motion:framePosition="5"
                android:alpha="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/tvWeatherDescription"
                motion:framePosition="20"
                android:alpha="0" />
            
            <!-- tvH: gradual fade-out starting at frame 5 -->
            <KeyAttribute
                motion:motionTarget="@+id/tvH"
                motion:framePosition="5"
                android:alpha="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/tvH"
                motion:framePosition="20"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tvH"
                motion:framePosition="100"
                android:alpha="0" />
            
            <!-- tvL: gradual fade-out starting at frame 5 -->
            <KeyAttribute
                motion:motionTarget="@+id/tvL"
                motion:framePosition="5"
                android:alpha="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/tvL"
                motion:framePosition="20"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tvL"
                motion:framePosition="100"
                android:alpha="0" />

            <!-- tvFeelsLike: gradual fade-out -->
            <KeyAttribute
                motion:motionTarget="@+id/tvFeelsLike"
                motion:framePosition="5"
                android:alpha="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/tvFeelsLike"
                motion:framePosition="20"
                android:alpha="0" />
            
            <!-- tvCondensedInfo: slower fade-in starting at frame 15 -->
            <KeyAttribute
                motion:motionTarget="@+id/tvCondensedInfo"
                motion:framePosition="15"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/tvCondensedInfo"
                motion:framePosition="35"
                android:alpha="1" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/tvCity"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tvCity"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:id="@+id/tvTemp" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeatherDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvTemp"
            android:layout_marginTop="0dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvH"
            motion:layout_constraintEnd_toStartOf="@+id/tvL"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvWeatherDescription"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvL"
            motion:layout_constraintTop_toBottomOf="@+id/tvWeatherDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/tvH"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFeelsLike"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvH"
            android:layout_marginTop="2dp" />
        <Constraint
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nsvWeatherDetails"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvFeelsLike"
            motion:layout_constraintBottom_toTopOf="@+id/divider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            motion:layout_constraintHorizontal_bias="0.5" />
        <Constraint
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/dividerBottomHourlyForecast"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvFeelsLike"
            android:layout_marginTop="0dp"
            android:visibility="gone" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCondensedInfo"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvCity"
            android:alpha="0" />
        <Constraint
            android:id="@+id/weatherEffectsView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/oppoRendererView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/swipeDataEnd">
        <Constraint
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCity"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
        <Constraint
            android:layout_height="1dp"
            android:layout_width="wrap_content"
            android:id="@+id/tvTemp"
            motion:layout_constraintTop_toBottomOf="@id/tvCondensedInfo"
            android:layout_marginTop="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/tvWeatherDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvTemp" />
        <Constraint
            android:id="@+id/tvH"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            motion:layout_constraintEnd_toStartOf="@+id/tvL"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvWeatherDescription"/>
        <Constraint
            android:id="@+id/tvL"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tvWeatherDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toEndOf="@+id/tvH"/>
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/nsvWeatherDetails"
            motion:layout_constraintTop_toBottomOf="@+id/tvTemp"
            motion:layout_constraintBottom_toTopOf="@id/divider"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp" />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dividerBottomHourlyForecast"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvTemp"
            android:layout_marginTop="0dp" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/tvFeelsLike"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvH" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCondensedInfo"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tvCity"
            android:alpha="1" />
        <Constraint
            android:id="@+id/weatherEffectsView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/oppoRendererView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>


</MotionScene>
